{
    "manifest_version": 2,
    "name": "Rhyme and Bias Extension",
    "version": "1.0",
    "description": "Change headlines into rhymes and append bias summaries.",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Click to see changed headlines"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ]
  }
  